{
  "name": "mdv-monorepo",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cli": "bun --cwd packages/cli run mdv",
    "test": "cargo test --workspace",
    "lint": "cargo fmt --all -- --check && cargo clippy --workspace --all-targets -- -D warnings",
    "coverage": "mkdir -p coverage && cargo llvm-cov --workspace --lcov --output-path coverage/lcov.info",
    "release:version": "bunx changeset version",
    "release:publish": "bunx changeset publish",
    "release:autoship": "npx autoship mdv -t patch -y"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7"
  }
}
